DECLARE GLOBAL CURRENTSTAGE TO 4.

UNTIL CURRENTSTAGE = 99{
CLEARSCREEN.
PRINT "APOAPSIS:"+SHIP:APOAPSIS.
WAIT 0.1.

IF CURRENTSTAGE = 4 {
PRINT "LAUNCHING".
STAGE.
SET CURRENTSTAGE TO 3. 
LOCK STEERING TO HEADING(90,90).
WAIT 1.
}

if currentstage = 3 and altitude > 1000 {
lock steering to heading(90,75).
}

IF CURRENTSTAGE = 3 AND MAXTHRUST = 0 {
PRINT "DISCARDING FIRST STAGE.".
WAIT 0.1.
STAGE.
SET CURRENTSTAGE TO 2.
LOCK STEERING TO HEADING(90,65).
WAIT 1.
}

IF CURRENTSTAGE = 2 AND STAGE:LIQUIDFUEL < 0.1 {
PRINT "ACTIVATING SECOND BOOSTER".
LOCK STEERING TO HEADING (90,65).
WAIT 1.
STAGE.
SET CURRENTSTAGE TO 0. 
WAIT 0.5.
}

IF CURRENTSTAGE = 1 AND MAXTHRUST = 0 {
PRINT "DISCARDING SECOND STAGE".
WAIT 0.1.
STAGE.
SET CURRENTSTAGE TO 0.
WAIT 1.
}

if currentstage = 0 and maxthrust = 0 {
lock steering to retrograde. 
PRINT "LOCKING STEERING TO RETROGRADE".
WAIT 1.
}
IF ALT:RADAR < 2000 AND CURRENTSTAGE = 0 {
PRINT "DEPLOYING CHUTES.".
CHUTES ON.
SET CURRENTSTAGE to 99.
}
}